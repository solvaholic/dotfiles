# To be executed in ~/.bash_profile

# Shorthand, for SSH to a GitHub Enterprise host...
function ssh_ghe() {
    echo " "
    echo "SSH to admin@$1 port 122; Redirect known_hosts to /dev/null; No StrictHostKeyChecking ..."
    echo " "
    ssh -i $GHE_SSH_KEY -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no -p 122 admin@$1
}

# Shorthand, for SSH to an AWS EC2 instance...
function ssh_aws() {
    echo " "
    echo "SSH to ec2-user@$1; Redirect known_hosts to /dev/null; No StrictHostKeyChecking ..."
    echo " "
    ssh -i $AWS_SSH_KEY -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no ec2-user@$1
}
