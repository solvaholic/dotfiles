#!/usr/bin/env bash
#
# Run all dotfiles installers.

set -e

cd "$(dirname $0)"/..

# Run Homebrew through the Brewfile
echo "â€º brew bundle"
brew bundle

# find the installers and run them iteratively
find . -maxdepth 2 -name 'install.sh' -not -path '*.git*' | while read installer ; do sh -c "${installer}" ; done
